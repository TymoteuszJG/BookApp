<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/black_frame">

    <ImageView
        android:id="@+id/one_row_book_list_api_Image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"


        />

    <TextView
        android:id="@+id/one_row_book_list_api_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="20sp"
        android:text="" />
    <TextView
        android:id="@+id/one_row_book_list_api_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="20sp"
        android:text="" />
    <TextView
        android:id="@+id/one_row_book_list_api_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="20sp"
        android:text="" />


</LinearLayout>